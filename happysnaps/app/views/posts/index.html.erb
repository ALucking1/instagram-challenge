<h1>HappySnaps</h1>
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <p><%= link_to (image_tag post.image.url), post_path(post) %></p>
    <p><%= post.caption %></p>
    <p><%= link_to 'Edit Post', edit_post_path(post)%></p>
    <% end %>
<% else %>
  <p>No posts yet</p>
<% end %>

<a href='posts/new/'>Add a post</a>
